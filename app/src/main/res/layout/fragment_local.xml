<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c4e47"
    android:baselineAligned="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/img_evropa_plus"
            android:layout_gravity="center_vertical"
            android:src="@drawable/evropa_plus"
            android:layout_margin="5dp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/img_kiss_fm"
            android:layout_gravity="center_vertical"
            android:src="@drawable/kiss_fm"
            android:layout_margin="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/img_nashe_radio"
            android:layout_gravity="center_vertical"
            android:src="@drawable/nashe_radio"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:id="@+id/img_hit_fm"
            android:layout_gravity="center_vertical"
            android:src="@drawable/hit_fm"
            android:layout_margin="5dp" />
    </LinearLayout>
</LinearLayout>